<!--pages/map/map.wxml-->
<van-search
  value="{{ value }}"
  placeholder="请输入搜索关键词"
  use-action-slot
  bind:search="onSearch"
>
</van-search>
<van-popup
  show="{{ showResult }}"
  position="bottom"
  overlay="{{ true }}"
  bind:close="close"
  custom-style="height: 70vh;"
>
<van-picker
  show-toolbar
  title="搜索结果"
  columns="{{searchResult}}"
  bind:cancel="onCancel"
  bind:confirm="onConfirm"
/>
</van-popup>
<van-tabs active="{{ active }}" bind:change="onChange">
  <van-tab title="教学楼">
    <map id="map1"
    class="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="17" 
    show-location markers="{{markers}}" bindmarkertap="markertap" >
  </map>
