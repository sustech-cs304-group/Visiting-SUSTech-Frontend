<view class="viewlittle" bindtap="moveTolocation" >
    <image src="../../images/icons/location.png" ></image>
</view>
<van-popup
  show="{{ showDialog }}"
  position="bottom"
  overlay="{{ true }}"
  bind:close="toggleDialog"
  custom-style="height: 70vh;"
>

<image style="width: 100%;" class="position-img" src='{{showingContent.image}}'></image>
<!-- <van-cell title="{{showingContent.name}}" size="large" /> -->
<view class="location-title">
  <text>{{showingContent.name}}</text>
</view>
<view class="location-icon">
<van-icon name="guide-o"  size="50px" bind:click="navigateTo"/>
</view>
<view class="location-content">
  <text>{{showingContent.discription}}</text>
</view>
</van-popup>
