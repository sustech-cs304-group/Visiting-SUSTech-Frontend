<view class="main">
  <form bindsubmit="submitForm">
    <view class="title1">请填写以下信息</view>

    <picker mode="date" class="title2" name="date" start="2023-04-11" end="2023-04-25" bindchange="bindDateChange">点击此处 选择入校时段
      <view class="picker" value="未选择"> 已选择入校时段: {{date}} </view>
    </picker>

    <view class="title2">姓名</view>
    <input class="input1" name="name" placeholder="请输入真实姓名" focus />

    <view class="title2">联系方式</view>
    <input class="input1" name="phone" placeholder="请输入手机号" maxlength="11" type="number" />

    <view class="title2">证件号</view>
    <input class="input1" name="idCard" placeholder="请输入预约人身份证号" maxlength="18" type="idcard" />

    <view class="title2">随行人数(最大人数5人)</view>
    <input class="input1" name="numPeople" placeholder="请输入随行人数" type="number" bindinput="bindNumPeopleChange" />

    <view class="title2">到访目的</view>
    <checkbox-group bindchange="checkChange" name="purpose">
      <checkbox value="学术交流">学术交流</checkbox>
      <checkbox value="演出活动">演出活动 </checkbox>
      <checkbox value="参观游览">参观游览 </checkbox>
      <checkbox value="其他">其他</checkbox>
    </checkbox-group>

    <view class="btn">
      <button form-type="submit" loading="{{isloading}}" bindtap="getsubload" type="primary" hover-class="btn-active">提交</button>
    </view>

  </form>
</view>