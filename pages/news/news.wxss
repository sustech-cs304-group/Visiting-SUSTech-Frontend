/**answer.wxss**/
.container {
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}

.title {
  position: relative;
  width: 750rpx;
  padding: 40rpx 50rpx 30rpx;
  background: #298DE5;
  color: #fff;
  font-size: 38rpx;
  line-height: 48rpx;
}
.publisher-wrp{
  position: relative;
  width: 750rpx;
  height: 150rpx;
  background: #fff;
}
.publisher-wrp .bg-half{
  position: absolute;
  width: 750rpx;
  height: 75rpx;
  background: #298DE5;
}
.publisher {
  position: relative;
  margin: 0 auto;
  width: 630rpx;
  height: 90rpx;
  padding: 30rpx;
  background: #fff;
  border: solid 1px #ebebeb;
  border-radius: 3px;
  box-shadow: 0 1px 2px #bebebe;
}
.publisher .avatar {
  float:left;
  flex: 1;
  width: 90rpx;
  height: 90rpx;
}

.publisher .avatar image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}
.publisher .publisher-info{
  text-align: left;
  margin-left: 100rpx;
  padding: 30rpx 20rpx;
  line-height: 38rpx;
}
.publisher .publisher-info text{
  display: block;
}
.publisher .publisher-info .publisher-name{
  font-size: 32rpx;
}

.content{
  padding: 30rpx 40rpx;
  background: #ffffff;
}
.content text{
  font-size: 32rpx;
  color: #454545;
  line-height: 44rpx;
}
.content image{
  width: 100%;
  margin: 20rpx 0;
}